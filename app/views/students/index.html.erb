<h1>Lijst studenten:</h1>

<table>
  <tr>
    <th>Voornaam</th>
    <th>Achternaam</th>
    <th>Aanwezig</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.voornaam %></td>
    <td><%= student.achternaam %></td>
    <td><INPUT TYPE=CHECKBOX NAME="aanwezig"></td>
    <td><%= link_to 'Bekijken', student %></td>
    <td><%= link_to 'Aanpassen', edit_student_path(student) %></td>
    <td><%= link_to 'Verwijderen', student, :confirm => 'Bent u zeker dat u de student wil verwijderen?', :method => :delete %></td>
  </tr>
<% end %>
</table>

