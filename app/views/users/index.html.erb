<h1>Lijst gebruikers</h1>

<table>
  <tr>
    <th>Voornaam</th>
    <th>Achternaam</th>
    <th>Email</th>
    <th>Paswoord</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.voornaam %></td>
    <td><%= user.achternaam %></td>
    <td><%= user.email %></td>
    <td><%= user.paswoord %></td>
    <td><%= link_to 'Bekijken', user %></td>
    <td><%= link_to 'Aanpassen', edit_user_path(user) %></td>
    <td><%= link_to 'Verwijderen', user, :confirm => 'Bent u zeker dat u deze gebruiker wilt verwijderen', :method => :delete %></td>
  </tr>
<% end %>
</table>

